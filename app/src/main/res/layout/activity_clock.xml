<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBlack">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorBlack"
            android:gravity="top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baterry" />

            <TextView
                android:id="@+id/battery_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-10dp"
                android:textColor="#A9A9A9"
                android:textSize="60dp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="776dp"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pickerView"
                android:layout_width="146dp"
                android:layout_height="48dp"
                android:layout_marginStart="348dp"
                android:layout_marginTop="12dp"
                android:paddingLeft="40dip"
                android:text="--:--"
                android:textSize="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/pickerButton"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Nastaviť budík"
                app:layout_constraintStart_toEndOf="@+id/pickerView"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Z"
                app:layout_constraintStart_toEndOf="@+id/pickerButton"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="right|center_horizontal"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/mod"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:button="@drawable/mod_check"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>
    </LinearLayout>

    <DigitalClock
        android:id="@+id/digitalClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-40dp"
        android:textColor="#008B8B"
        android:textSize="255sp"
        android:textStyle="bold" />

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="65sp"
        android:layout_marginTop="-30dp"
        android:textColor="#FFFFFF"
        android:format24Hour="EEEE  d. MMMM  yyyy"
        android:layout_gravity="center_horizontal"
        android:timeZone="GMT+01:00"/>

    <LinearLayout
            android:id="@+id/LL_radia_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radia"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/tbtn_slovensko"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/slovensko_check"
                        android:background="@null"
                        android:textOn=""
                        android:textOff="" />

                    <ToggleButton
                        android:id="@+id/tbtn_regina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/regina_check"
                        android:background="@null"
                        android:textOn=""
                        android:textOff=""/>

                    <ToggleButton
                        android:id="@+id/tbtn_jemne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/jemne_check"
                        android:background="@null"
                        android:textOn=""
                        android:textOff=""/>

                    <ToggleButton
                        android:id="@+id/tbtn_vlna"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/vlna_check"
                        android:background="@null"
                        android:textOn=""
                        android:textOff=""/>
                </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

                <SeekBar
                    android:id="@+id/seekBar1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:thumb="@drawable/drag_thumb"
                    android:layout_marginTop="25dp"
                    android:max="100" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>